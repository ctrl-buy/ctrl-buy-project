<% layout('/layout/boilerplate') -%>

        <body>
            <section class="index">
                <div class="indexHead">
                    <div class="left">
                        <p>
                            Welcome to CTRL BUY, a haven for Mobiles! We're thrilled you've arrived.
                            Explore our curated collections and discover treasures that bring joy to your life</p>
                        <form action="" class="leftForm">
                            <input type="text" autocomplete="off" placeholder="Serach Model Name ">
                            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </div>
                    <div class="right">
                        <h3>Offers <i class="fa-solid fa-tags"></i></h3>
                        <div class="owl-carousel">
                            <div class="item"><img src="/images/1.jpg" alt="img"></div>
                            <div class="item"><img src="/images/2.jpg" alt="img"></div>
                            <div class="item"><img src="/images/3.jpg" alt="img"></div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="indexMain">
                    <div class="indexContainer">
                        <% for(data of contants){ %>
                            <div class="indexBox" style="background-image: url('<%= data.img.url%>');">
                                <a href="/listings/<%= data._id %>">
                                    <div class="boxText">
                                        <p>
                                            <%= data.modelName %>
                                        </p>
                                        <span class="SeeMore">See details</span>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                    </div>
                    <div class="adds">
                        <p>Advertisement</p>
                    </div>
                </div>
            </section>
        </body>